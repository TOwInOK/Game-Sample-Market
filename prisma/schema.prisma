generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  email    String   @id @unique
  name     String
  password String?
  coins    Int
  cart     Cart?
}

model Cart {
  id        Int      @id @default(autoincrement())
  user_mail String   @unique
  user      User     @relation(fields: [user_mail], references: [email])
  products  Product[]
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  about     String?
  faq       String?
  price     Int
  value     Int
  stat      String
  stars     Int @default(0)
  carts     Cart[]
}
